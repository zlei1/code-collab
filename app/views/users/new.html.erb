<div class="login-container">
  <div class="blob blob-1"></div>
  <div class="blob blob-2"></div>

  <div class="glass-panel login-card animate-fade-in">
    <div class="brand-logo">
      <i data-lucide="code-2"></i>
      CodeCollab
    </div>

    <%= form_with model: @user, url: signup_path do |f| %>
      <div class="input-group">
        <%= f.label :display_name, "Display Name", class: "input-label" %>
        <%= f.text_field :display_name, placeholder: "Alex Dev", class: "input-field" %>
      </div>

      <div class="input-group">
        <%= f.label :email, "Email Address", class: "input-label" %>
        <%= f.email_field :email, required: true, placeholder: "dev@example.com", class: "input-field" %>
      </div>

      <div class="input-group">
        <%= f.label :password, "Password", class: "input-label" %>
        <%= f.password_field :password, required: true, placeholder: "********", class: "input-field" %>
      </div>

      <div class="input-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "input-label" %>
        <%= f.password_field :password_confirmation, required: true, placeholder: "********", class: "input-field" %>
      </div>

      <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
    <% end %>

    <div class="auth-switch">
      Already have an account? <%= link_to "Log in", login_path %>
    </div>
  </div>
</div>
